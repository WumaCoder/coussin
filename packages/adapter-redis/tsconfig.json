{
  "compilerOptions": {
    "rootDir": "",
    "importHelpers": true,
    "strict": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": false,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {}
  },
  "include": ["src/**/*.ts"]
}
