{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "importHelpers": true,
    "strict": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": false,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {},
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "types", "dist", ".rollup.cache"]
}
